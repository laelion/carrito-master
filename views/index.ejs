<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda</title>
    <link href="./librerias/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/7b25a920d2.js" crossorigin="anonymous"></script>
    <script src="./librerias/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="./style.css" >

</head>

<body>
  <!-- navbar-->
    <nav class="navbar  bg-dark fixed-top">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Navbar</span>
            <div class="col-6 comprarButtonDiv d-flex align-items-center">
                <button class="btn btn-light comprarButton  " type="button" data-bs-toggle="modal"
                    data-bs-target="#comprarModal"><i class="fas fa-shopping-cart"></i></button>
            </div>
        </div>

    </nav>

    <header>
        <div class="container">
            <h1 class="text-center">TIENDA</h1>
            <hr>
        </div>
    </header>

    <!-- TIENDA-->
    <section class="store">
        <div class="container">
            <div class="items"></div>
        </div>
    </section>



    <!-- Modal -->
    <div class="modal " id="comprarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable ">
            <div class="modal-content">
                <div class="modal-header ">
                    <h5 class="modal-title" id="exampleModalLabel">Carrito</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                </div>
                <div class="row">
                <div class="modal-footer">
                    <div class="col-5 shopping-cart-total d-flex align-items-center">
                        <p class="mb-0">Total</p>
                        <p class="ml-4 mb-0 total">$0</p>

                    </div>
                    <button type="button" class="col-2 btn btn-secondary limpiar" >Limpiar</button>
                    <button type="button" class="col-3 btn btn-primary ">Comprar</button>
                </div>
            </div>
            </div>
        </div>
    </div>
    </section>



    <!--  FOOTER -->
    <footer class="bg-dark p-3 mt-5">
        <p class="text-center m-0 text-muted">Tienda </p>
    </footer>





    <!-- SCRIPTS -->


    <script src="/JSON/servicios.js"></script>
    <script src="./main.js"></script>
  


</body>

</html>